

<br><br>

<% @patient_name="Patient" %>
<%= link_to 'Back', {:action =>'home'} %>
<div class ="Patient Index"><br><br>
	<h1> Patient</h1>
	<style>
		table,th,td{
			border:1px solid black;
			border-collapse:collapse;
		}
		th,td{
			padding:15px;
		}
		h5{text-align: center;}
	</style>
	<%#
	<%= link_to"Add New Patient",controller:"patient",action:'new',class:"action new" modlessthan
	%>
	<br>
   <h5>
	<table class ="listing" summary="patient List"style="width:50%">
	
		<tr class="header">
			<th> PatientName </th>
			<th> Symptoms </th>
			<th> Age </th>
			<th> Action</th>
		</tr>
		<tr>
		</tr>
		<% @patients.each do |b| %>
		<tr class ="<%= cycle('odd','even') %>">
			<td> <%=b.name %></td>
			<td> <%=b.symptoms %></td>
			<td> <%=b.age %></td>

			<td class ="actions">
				<%= link_to"Show",action:'show',id:b.id,class:"action show"%>
				<%#
				<%= link_to"Edit",action:'edit',id:b.id,class:"action edit" %>
				<%= link_to"Delete",action:'delete',id:b.id,class:"action delete"%>

			</td>
		</tr>
	
	<%end%>
</h5>
</table>
</div>

